.content
    padding-left 2em
    padding-right 2em
    
.content-font
    font-family serif
    font-size 16px
    line-height 1.5em

.post
    padding-bottom 2em

.post-title
    font-size 2em
    margin-bottom 0.2em

.post-title a
    text-decoration none

.post-author
    text-decoration none

.post-avatar
    border-radius 50px
    float right
    margin-left 1em

.post-description
    font-family Georgia, "Cambria", serif
    color #444
    line-height 1.8em

.post-meta
    color #999
    font-size 90%
    margin 0

.post-category
    margin 0 0.1em
    padding 0.3em 1em
    color #fff
    background #999
    font-size 80%

.post-images
    margin 1em 0

.post-image-meta
    margin-top -3.5em
    margin-left 1em
    color #fff
    text-shadow 0 1px 1px #333

.article-title
    padding-left 1em

.footer
    text-align center
    padding 1em 0

.footer a
    color #ccc
    font-size 80%

.footer .pure-menu a:hover, .footer .pure-menu a:focus
    background none

@media (max-width: 767px)
    .sidebar
        width 100%
        position relative
        margin 0

    .header
        text-align center
        top auto
        margin 3em auto
        position static

    #layout
        padding 0

@media (max-width: 480px)
    .content
        padding 2em 1em 0
