/* Your styles go here */
@import url(http://fonts.googleapis.com/css?family=Lato:300);

*
    -webkit-box-sizing border-box
    -moz-box-sizing border-box
    box-sizing border-box

fonts = 'Lato', sans-serif

/* BRAND STYLE */
red = #E74C3C
blue = #1E9CCC
white = #ECF0F1
light-grey = #F7F7F7

.front-color
    color red

.background-color
    background-color red

.light-background
    background-color light-grey

.dark-front-color
    color #838383

.title-font
    font-family fonts


/* SHARED */
.title-left-border
    border-left 8px solid red
    padding-left 0
    margin-left -12%

.seperator
    border 1px solid #E5E5E5

/* LAYOUT CSS */
#layout
    padding-left 25% /* "left col (nav + list)" width */
    position relative

.sidebar
    position fixed
    top 0
    bottom 0
    width 25%
    margin-left -25%

.header
    margin 10% 2em 0
    text-align center

.brand-title, .brand-tagline
    margin 0

.brand-title a
    text-decoration none

.nav-list
    margin 0
    padding 0
    list-style none

.bab
    margin-top 24px
    text-align left

.chapters
    text-align left
    overflow auto

